{
  "name": "elm-bookshelf",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "copy:html": "ncp ./src/index.html ./out/index.html",
    "copy:js": "ncp ./src/main.js ./out/main.js",
    "copy": "mkdirp out && npm-run-all -p copy:*",
    "watch": "elm-live ./src/Main.elm --open --pushstate --dir=out -- --output=./out/elm.js --debug",
    "start": "npm-run-all -s copy watch"
  },
  "dependencies": {
    "elm": "^0.19.1-5",
    "elm-live": "^4.0.2",
    "mkdirp": "^1.0.4",
    "ncp": "^2.0.0",
    "npm-run-all": "^4.1.5"
  }
}
